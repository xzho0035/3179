{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "description": "A simple radial chart Forest type.",
    "width": 950,
    "height": 400,
    "data": {
        "url": "data/Forest_Type_Pie.csv"
      },
    "layer": [{
      "mark": {"type": "arc", "innerRadius": 20, "stroke": "#fff"}
    },{
      "mark": {"type": "text", "radiusOffset": 10},
      "encoding": {
        "text":{
            "field": "Area",
            "type": "quantitative"
        }
      }
    }],
    "encoding": {
      "theta": {
        "field": "Area", 
        "type": "quantitative", 
        "stack": true
    },
      "radius": {
        "field": "Area",
        "scale": {
            "type": "sqrt", 
            "zero": true, 
            "rangeMin": 10
        }
        },
      "color": {
        "field": "Forest type", 
        "type": "nominal"
    }
    }
  }
  