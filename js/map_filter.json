{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "The Plantation areas in Australia 2002 (â€™000 ha)",
    "width": 950,
    "height": 400,
    "projection": {"type": "mercator"},
    "data": {
      "url": "js/STE_2016_AUST.json",
      "format": {"type": "topojson", "feature": "STE_2016_AUST"}
    },
    "params":[
    {
      "name": "year_selection",
      "bind":{
        "input": "select",
        "options":[
          null,
          "2002",
          "2003",
          "2004",
          "2005",
          "2006",
          "2007",
          "2008",
          "2009",
          "2010",
          "2011",
          "2012",
          "2013",
          "2014",
          "2015",
          "2016",
          "2017",
          "2018",
          "2019",
          "2020","2021","2022"
        ],
        "labels": [
          "show all",
          "2002",
          "2003",
          "2004",
          "2005",
          "2006",
          "2007",
          "2008",
          "2009",
          "2010",
          "2011",
          "2012",
          "2013",
          "2014",
          "2015",
          "2016",
          "2017",
          "2018",
          "2019",
          "2020","2021","2022"]
      }
    }
  ],
    "transform": [
      {
        "lookup": "properties.STE_NAME16",
        "from": {
          "data": {
            "url": "data/FIT3179_A2_V3.csv"
          },
          "key": "State",
          "fields": ["Area","Date"]
        }
      },
      {"filter":"year_selection == null || datum.Date == year_selection"}
    ],
    "mark": {"type": "geoshape", "stroke": "black"},
    "encoding": {
      "color": {
        "field": "Area",
        "type": "quantitative",
        "scale": {"type": "threshold",
        "domain": [100, 150, 200, 250, 300, 350, 400, 450, 500]}
      },
      "text": {"field": "State", "type": "nominal"},
      "tooltip": [
        {"field": "properties.STE_NAME16", "type": "nominal", "title": "Country"},
        {"field": "Area", "type": "quantitative"}
      ]
    }
  }